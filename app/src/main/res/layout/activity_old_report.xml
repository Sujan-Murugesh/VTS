<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OldReport"
    android:background="@drawable/bg14">

    <EditText
        android:id="@+id/oldPrintEdit_text"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="38dp"
        android:layout_toStartOf="@+id/old_printbtn"
        android:background="@drawable/login_background"
        android:ems="10"
        android:gravity="center"
        android:hint="Rep.No"
        android:importantForAutofill="no"
        android:inputType="number" />

    <Button
        android:id="@+id/old_printbtn"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@+id/imageButton"
        android:background="@drawable/login_background"
        android:text="Re-Create" />

    <ir.androidexception.datatable.DataTable
        android:id="@+id/data_table"
        android:layout_width="403dp"
        android:layout_height="630dp"
        android:layout_below="@+id/oldPrintEdit_text"
        android:layout_marginStart="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:corner_radius="8dp"
        app:direction="ltr"
        app:header_background_color="#fff"
        app:header_gravity="center"
        app:header_horizontal_padding="0dp"
        app:header_text_color="#000"
        app:header_text_size="10sp"
        app:header_vertical_padding="16dp"
        app:persian_number="false"
        app:row_background_color="#fff"
        app:row_gravity="center"
        app:row_text_color="#000"
        app:row_text_size="4sp"
        app:row_vertical_padding="16dp"
        app:shadow="8dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/login_background"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:onClick="openDialog"/>
</RelativeLayout>